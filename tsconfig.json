{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",  // ğŸ”§ nodeë¡œ ì„¤ì •
    "jsx": "preserve",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "incremental": true,
    "types": ["@clerk/nextjs"],  // ğŸ”§ Clerk íƒ€ì… ì¶”ê°€
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "middleware.ts",           // âœ… ì´ ì¤„ì„ ì¶”ê°€í•´ì•¼ middleware ì¸ì‹í•¨
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}